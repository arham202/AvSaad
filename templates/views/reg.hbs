<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
	<title>AvSaad</title>
	<link rel="stylesheet" href="css/Reg.css">
</head>
<script>
        function valid() {
            var emailbox = document.getElementById("ae").value;
            var emailbox2 = document.getElementById("ae");
            var re = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (re.test(emailbox)){
                return true;
            }
            else {
                emailbox2.style.border = "red solid 3px";
                return false;
            }
        }
</script>
<body>

	<header>
		<h1 class="heading">Welcome To AvSaad</h1>
	</header>

  
	<div class="container">
		<div class="slider"></div>
		<div class="btn">
			<button class="login"><a href="/log">Login</a></button>
			<button class="signup"><a href="/reg">Signup</a></button>
		</div>
    	<form action="/reg" method="POST">
			<div class="signup-box">
				<input type="text" class="name ele" placeholder="Enter your name(at least 2 words)" name="name" id="an">
				<input type="email" class="email ele" placeholder="youremail@email.com" name="email" id="ae">
				<input type="password" class="password ele" placeholder="Password" name="password" id="ap">
				<input type="password" class="password ele" placeholder="Confirm password" name="conpassword" id="ac">
				<input type="submit" class="clkbtn" value="Register" onclick="valid()">
			</div>
		</div>
	</div>
    </form>
</body>
</html>
